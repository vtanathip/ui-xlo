<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/instruction_category_imageview"
        android:src="@drawable/instruction_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_category_header"
        android:id="@+id/instructionCategoryHeader"
        android:layout_marginBottom="43dp"
        android:layout_alignBottom="@+id/instruction_category_imageview"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_category_title"
        android:id="@+id/instructionCategorytitle"
        android:layout_alignBottom="@+id/instruction_category_imageview"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>